<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="hr.fer.zpr.lumen">

    <application
            android:name=".dagger.application.LumenApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:largeHeap="true"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
                android:name=".ui.activities.MainMenuActivity"
                android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".ui.wordgame.WordGameActivity"
                android:configChanges="orientation|screenSize|keyboardHidden"
                android:screenOrientation="landscape"/>
        <activity
                android:name=".ui.coingame.activity.CoinGameActivity"
                android:configChanges="orientation|screenSize|keyboardHidden"
                android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.numbergame.activity.NumberGameActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape"/>
        <activity
                android:name=".ui.activities.GameSettingsActivity"
                android:screenOrientation="landscape"/>
        <activity
                android:name=".ui.activities.CategorySelectionActivity"
                android:screenOrientation="landscape"/>
        <activity
                android:name=".ui.activities.InfoActivity"
                android:screenOrientation="landscape"/>

        <activity android:name=".ui.activities.WordGameSettingsActivity"
                  android:screenOrientation="landscape"/>

    </application>

</manifest>